    <div class='row'>
        <div class='col-md-3'>
            <!--sidebar-->
            <p class="lead"> Camp Directory </p>   
            <div class='list-group'>
                <li class='list-group-item active'> PH1   </li>
                <li class='list-group-item'> PH2  </li>
                <li class='list-group-item'> PH3  </li>
            </div>
            MAP
        </div>
        <div class='col-md-9'>
            <div class='thumbnail nopad'>
                <img class='img-responsive'src= '<%= passin.img %>'>
            <div class='caption-full'>
                <h4 class='pull-right'> $11.00/Night USD</h4>
                <h3> <a><%= passin.name %></a></h3>
                <p class='container'> <%= passin.txt %></p>
                <em><p class='container'> Added by - "<%= passin.op.username %>"</p></em>
                
                <% if (curuser && passin.op.id && passin.op.id.equals(curuser._id)){ %>
                <a class='btn btn-xs btn-warning' href='/camps/<%=passin._id%>/edit'>Edit!</a>
                <form class='del' action="/camps/<%=passin._id%>?_method=DELETE" method="POST">
                    <button class='btn  btn-xs btn-danger'> Delete?</button>
                </form>
                <% } %>

            </div>
  
            </div>
                         <div class='well'> 
                    <div class='text-right'>
                        <a class ='btn btn-large btn-success' href='/camps/<%=passin._id%>/comments/new'> Add Comments! </a>
                    </div>        
                    <hr>
    <% passin.comments.forEach(function(c){%>

                    <div class='row'>
                        <div class='col-md-12'> 
                           <strong>  "<%=c.said.username %>" said:  </strong> 
                            <span class='pull-right'> a few days ago</span>
                            <p>
                              <%=c.txt %>  
                            </p>
                        <% if (curuser && c.said.id && c.said.id.equals(curuser._id)){ %>

                            <a class='btn btn-xs btn-warning' 
                            href="/camps/<%=passin._id%>/comments/<%=c._id%>/edit"> 
                            Edit Comment!</a>
                            <form class='del' action='/camps/<%=passin._id%>/comments/<%=c._id%>?_method=DELETE' method="POST"> 
                            <button class='btn btn-xs btn-danger'> 
                            DELETE Comment!</button>
                         <% } %>
